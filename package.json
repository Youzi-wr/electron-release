{
  "name": "baidu",
  "version": "0.3.0",
  "main": "main.js",
  "description": "Desktop Application",
  "author": "baidu",
  "license": "MIT",
  "scripts": {
    "pack": "electron-builder --ia32 --x64 -w",
    "publish": "build --win -p always"
  },
  "devDependencies": {
    "electron": "15.5.5",
    "electron-builder": "^20.15.1"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^4.0.0"
  },
  "appDefaults": {
    "appName": "baidu",
    "entryURL": "https://www.baidu.com",
    "width": 1080,
    "height": 700,
    "autoUpdaterUrl": "http://localhost:8090/test-release"
  },
  "build": {
    "appId": "baidu.client.desktop",
    "artifactName": "${name}-v${version}-${os}.${ext}",
    "electronDownload": {
      "cache": "./zips"
    },
    "asarUnpack":"static",
    "publish": {
      "provider": "generic",
      "url": "http://localhost:8090/test-release/"
    },
    "win": {
      "icon": "static/images/install.png",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "static/images/install.png",
      "category": "public.app-category.business",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "directories": {
      "output": "./packages"
    }
  }
}
